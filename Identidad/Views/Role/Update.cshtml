@model RoleEditar
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white">Actualizar Rol</h1>
<a asp-action="Index" class="btn btn-secondary">Atrás</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="NombreRol" value="@Model.Role.Name" />
    <input type="hidden" name="IdRol" value="@Model.Role.Id" />

    <h2 class="bg-info p-1 text-white">Añadir a @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">Usuarios que pueden ser miembros</td></tr>
        }
        else
        {
            @foreach (AppUsuario usuario in Model.NonMembers)
            {
                <tr>
                    <td>@usuario.UserName</td>
                    <td>
                        <input type="checkbox" name="AgregarIds" value="@usuario.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-info p-1 text-white">Eliminar @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">Usuarios que se pueden eliminar del Rol</td></tr>
        }
        else
        {
            @foreach (AppUsuario usuario in Model.Members)
            {
                <tr>
                    <td>@usuario.UserName</td>
                    <td>
                        <input type="checkbox" name="EliminarIds" value="@usuario.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
