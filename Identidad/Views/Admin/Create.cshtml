    ViewData["Title"] = "Crear Usuario";
}

<h1 class="bg-info text-white">Crear Usuario</h1>
<a asp-action="Index" class="btn btn-secondary">Atr√°s</a>
<div asp-validation-summary="All" class="text-danger"></div>

