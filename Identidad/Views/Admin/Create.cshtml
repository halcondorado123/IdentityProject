@model Identidad.Models.Usuario 

@{
    ViewData["Title"] = "Crear Usuario";
}

<h1 class="bg-info text-white">Crear Usuario</h1>
<a asp-action="Index" class="btn btn-secondary">Atrás</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pais"></label>
        <select asp-for="Pais" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(Pais)))">
            <option selected disabled value="Select">Selecciona un país</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
