@model Identidad.Models.Usuario
@using Identidad.Models.ModelUsuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<style>
    .container-fluid {
        padding: 0;
    }

    .content-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content-container {
        width: 100%;
        max-width: 1200px;
        box-sizing: border-box;
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="content-container text-center">
    <h1 class="bg-info text-white">Crear Usuario</h1>
    <a asp-action="Index" class="btn btn-secondary mt-3">Atrás</a>
    <div asp-validation-summary="All" class="text-danger mt-3"></div>

    <form method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombres" class="form-label"></label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Apellidos" class="form-label"></label>
            <input asp-for="Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="TipoDocumento" class="form-label"></label>
            <select asp-for="TipoDocumento" class="form-control">
                <option value="">Selecciona un documento</option>
                <option value="1">Cédula</option>
                <option value="2">Cédula de extranjería</option>
                <option value="3">Pasaporte</option>
            </select>
            <span asp-validation-for="TipoDocumento" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="NumeroDocumento" class="form-label"></label>
            <input asp-for="NumeroDocumento" type="number" class="form-control" />
            <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
        </div>

        <!-- Selección del Documento -->
        <div class="form-group mt-3">
            <label asp-for="FechaNacimiento" class="form-label"></label>
            <input asp-for="FechaNacimiento" type="date" class="form-control" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Edad" class="form-label"></label>
            <input asp-for="Edad" type="number" class="form-control" />
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>

        <!-- Selección de País de Nacimiento -->
        <div class="form-group mt-3">
            <label asp-for="PaisNacimientoId" class="form-label"></label>
            <select asp-for="PaisNacimientoId" class="form-control" asp-items="@(ViewBag.Paises)">
                <option value="">Selecciona un país de nacimiento</option>
            </select>
            <span asp-validation-for="PaisNacimientoId" class="text-danger"></span>
        </div>

        <!-- Selección de Departamento de Nacimiento -->
        <div class="form-group mt-3">
            <label asp-for="DepartamentoNacimientoId" class="form-label"></label>
            <select asp-for="DepartamentoNacimientoId" class="form-control" asp-items="@(ViewBag.Departamentos)">
                <option value="">Selecciona un departamento de nacimiento</option>
            </select>
            <span asp-validation-for="DepartamentoNacimientoId" class="text-danger"></span>
        </div>

        <!-- Selección de Municipio de Nacimiento -->
        <div class="form-group mt-3">
            <label asp-for="MunicipioNacimientoId" class="form-label"></label>
            <select asp-for="MunicipioNacimientoId" class="form-control" asp-items="@(ViewBag.Municipios)">
                <option value="">Selecciona un municipio de nacimiento</option>
            </select>
            <span asp-validation-for="MunicipioNacimientoId" class="text-danger"></span>
        </div>

        <!-- Dirección de domicilio -->
        <div class="form-group mt-3">
            <label asp-for="DireccionDomicilio" class="form-label"></label>
            <input asp-for="DireccionDomicilio" class="form-control" />
            <span asp-validation-for="DireccionDomicilio" class="text-danger"></span>
        </div>

        <!-- Selección de País de Domicilio -->
        <div class="form-group mt-3">
            <label asp-for="PaisDomicilioId" class="form-label"></label>
            <select asp-for="PaisDomicilioId" class="form-control" asp-items="@(ViewBag.Paises)">
                <option value="">Selecciona un país de domicilio</option>
            </select>
            <span asp-validation-for="PaisDomicilioId" class="text-danger"></span>
        </div>

        <!-- Selección de Departamento de Domicilio -->
        <div class="form-group mt-3">
            <label asp-for="DepartamentoDomicilioId" class="form-label"></label>
            <select asp-for="DepartamentoDomicilioId" class="form-control" asp-items="@(ViewBag.Departamentos)">
                <option value="">Selecciona un departamento de domicilio</option>
            </select>
            <span asp-validation-for="DepartamentoDomicilioId" class="text-danger"></span>
        </div>

        <!-- Selección de Municipio de Domicilio -->
        <div class="form-group mt-3">
            <label asp-for="MunicipioDomicilioId" class="form-label"></label>
            <select asp-for="MunicipioDomicilioId" class="form-control" asp-items="@(ViewBag.Municipios)">
                <option value="">Selecciona un municipio de domicilio</option>
            </select>
            <span asp-validation-for="MunicipioDomicilioId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="EmailPersonal" class="form-label"></label>
            <input asp-for="EmailPersonal" class="form-control" />
            <span asp-validation-for="EmailPersonal" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="EmailInstitucional" class="form-label"></label>
            <input asp-for="EmailInstitucional" class="form-control" />
            <span asp-validation-for="EmailInstitucional" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="TelefonoCelular" class="form-label"></label>
            <input asp-for="TelefonoCelular" class="form-control" />
            <span asp-validation-for="TelefonoCelular" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="TelefonoFijo" class="form-label"></label>
            <input asp-for="TelefonoFijo" class="form-control" />
            <span asp-validation-for="TelefonoFijo" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ContratoEmpleadoId" class="form-label"></label>
            <select asp-for="ContratoEmpleadoId" class="form-control" asp-items="@(ViewBag.Contratos)">
                <option value="">Selecciona un contrato</option>
            </select>
            <span asp-validation-for="ContratoEmpleadoId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Salario" class="form-label"></label>
            <input asp-for="Salario" class="form-control" />
            <span asp-validation-for="Salario" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CargoEmpleado" class="form-label"></label>
            <input asp-for="CargoEmpleado" class="form-control" />
            <span asp-validation-for="CargoEmpleado" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Crear</button>
    </form>
</div>
