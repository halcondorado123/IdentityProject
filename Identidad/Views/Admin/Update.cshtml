@using Identidad.Models.ModelUsuario
@model Usuario

@{
    var paises = ListUtils.GetPaises();
    var departamentos = ListUtils.GetDepartamentos();
    var municipios = ListUtils.GetMunicipios();
    var contratos = ListUtils.GetContratos();
}

<h1 class="bg-info text-white">Actualizar Usuario</h1>
<a asp-action="Index" class="btn btn-secondary">Atrás</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input name="Password" type="password" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="TipoDocumento" class="form-label"></label>
        <select asp-for="TipoDocumento" class="form-control">
            <option value="">Selecciona un documento</option>
            <option value="1">Cédula</option>
            <option value="2">Cédula de extranjería</option>
            <option value="3">Pasaporte</option>
        </select>
        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="NumeroDocumento" class="form-label"></label>
        <input asp-for="NumeroDocumento" type="number" class="form-control" />
        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="PaisNacimientoId"></label>
        <select asp-for="PaisNacimientoId" class="form-control" asp-items="@(new SelectList(ListUtils.GetPaises(), "Value", "Text"))">
            <option selected disabled value="">Selecciona un país</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DepartamentoNacimientoId"></label>
        <select asp-for="DepartamentoNacimientoId" class="form-control" asp-items="@(new SelectList(ListUtils.GetDepartamentos(), "Value", "Text"))">
            <option selected disabled value="">Selecciona un departamento</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MunicipioNacimientoId"></label>
        <select asp-for="MunicipioNacimientoId" class="form-control" asp-items="@(new SelectList(ListUtils.GetMunicipios(), "Value", "Text"))">
            <option selected disabled value="">Selecciona un municipio</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DireccionDomicilio"></label>
        <input asp-for="DireccionDomicilio" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaisDomicilioId"></label>
        <select asp-for="PaisDomicilioId" class="form-control" asp-items="@(new SelectList(ListUtils.GetPaises(), "Value", "Text"))">
            <option value="">Selecciona un país</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DepartamentoDomicilioId"></label>
        <select asp-for="DepartamentoDomicilioId" class="form-control" asp-items="@(new SelectList(ListUtils.GetDepartamentos(), "Value", "Text"))">
            <option selected disabled value="">Selecciona un departamento</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MunicipioDomicilioId"></label>
        <select asp-for="MunicipioDomicilioId" class="form-control" asp-items="@(new SelectList(ListUtils.GetMunicipios(), "Value", "Text"))">
            <option selected disabled value="">Selecciona un municipio</option>
        </select>
    </div>
    
    <div class="form-group">
        <label asp-for="EmailPersonal"></label>
        <input asp-for="EmailPersonal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmailInstitucional"></label>
        <input asp-for="EmailInstitucional" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TelefonoCelular"></label>
        <input asp-for="TelefonoCelular" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TelefonoFijo"></label>
        <input asp-for="TelefonoFijo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ContratoEmpleadoId"></label>
        <select asp-for="ContratoEmpleadoId" class="form-control" asp-items="@(new SelectList(contratos, "Value", "Text"))">
            <option selected disabled value="">Selecciona un contrato</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CargoEmpleado"></label>
        <input asp-for="CargoEmpleado" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
