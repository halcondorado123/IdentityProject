@model AppUsuario

<h1 class="bg-info text-white">Actualizar Usuario</h1>
<a asp-action="Index" class="btn btn-secondary">Atrás</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pais"></label>
        <select asp-for="Pais" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(Pais)))">
            <option selected disabled value="Select">Selecciona un país</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
