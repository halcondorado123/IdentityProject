@model IEnumerable<AppUsuario>

<h1 class="bg-info text-white">Todos los Usuarios</h1>
@* <a asp-action="Create" class="btn btn-secondary">Crear un Usuario</a> *@
<a asp-controller="Admin" asp-action="Create" class="nav-link text-white">Crear Usuario</a>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Nombre</th><th>Email</th></tr>
    @foreach (AppUsuario Usuario in Model)
    {
        <tr>
            <td>@Usuario.Id</td>
            <td>@Usuario.UserName</td>
            <td>@Usuario.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@Usuario.Id">Actualizar</a>
            </td>

            <td>
                <form asp-action="Delete" asp-route-id="@Usuario.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
    }
</table>


